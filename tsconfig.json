{
  "include": ["src", "tests"],
  "exclude": ["dist"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "strictNullChecks": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
  }
}
